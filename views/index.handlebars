<div class="container">
    <img src="./assets/img/burgerImg.png" width="200">
    <h1>Eat-Da-Burger!</h1>
    <div class="row burgers">
        <div class="col-6">
            <ul>
            {{#each burgers}}
            {{#if this.devoured}}
                <li>
                    <p>{{this.id}}. {{this.burger_name}} <button class="btn btn-success ml-5 mb-1"
                            data-id={{this.id}}>Devour it!</button></p>
                </li>
            </ul>
        </div>
        <div class="col-4">
            <ul>
                {{else}}
                <li>
                    <button disabled class="btn btn-secondary" id="disabledBtn">{{this.id}}. {{this.burger_name}}
                    </button>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <form>
        <div class="form-group">
            <textarea type="text" class="form-control" id="newBurger" rows="1"></textarea>
            <button type="submit" class="btn btn-primary mt-2">Submit</button>
            <small class="form-text text-muted mt-3">Enter a burger you want to eat Click the "Submit" button</small>
        </div>
    </form>
</div>